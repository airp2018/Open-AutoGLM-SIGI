<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glowing Outer Effect (Fake Shadow/Glow) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2200E676"/>
            <corners android:radius="12dp"/>
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/>
        </shape>
    </item>
    
    <!-- Main Body: Dark Matter Parchment -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <!-- Darker than black, slight brown tint -->
            <solid android:color="#F0101210"/> 
            
            <!-- Gold/Bronze Border -->
            <stroke 
                android:width="1dp" 
                android:color="#88D4AF37"/>
                
            <corners android:radius="10dp"/>
        </shape>
    </item>
    
    <!-- Inner Scanline Effect (Optional, simplified as gradient) -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
         <shape android:shape="rectangle">
             <gradient 
                 android:startColor="#1100E676"
                 android:centerColor="#00000000"
                 android:endColor="#1100E676"
                 android:angle="90"/>
             <corners android:radius="8dp"/>
         </shape>
    </item>
</layer-list>
