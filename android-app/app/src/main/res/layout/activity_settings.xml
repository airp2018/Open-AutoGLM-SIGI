<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_red_coast"
        android:alpha="0.6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIGURATION"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.1"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp" />

        <RadioGroup
            android:id="@+id/providerGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbZhipu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ZhipuAI"
                android:textColor="#E0E0E0"
                android:buttonTint="@color/salvation_green"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbModelScope"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ModelScope"
                android:buttonTint="@color/salvation_green"
                android:textColor="#E0E0E0" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base URL"
            android:textColor="#90A4AE"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editBaseUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tech_input_border"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:text="https://open.bigmodel.cn/api/paas/v4/"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API Key"
            android:textColor="#90A4AE"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editApiKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tech_input_border"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:text="562eac47fb0c43fa995ee58261d12a52.Y2HAB0eRQPyXKiHI"
            android:textSize="14sp"
            android:singleLine="true"
            android:inputType="textPassword" 
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model Name"
            android:textColor="#90A4AE"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editModelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tech_input_border"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:text="autoglm-phone"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="SAVE &amp; RETURN"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/tech_button_bg" />

    </LinearLayout>
</FrameLayout>
