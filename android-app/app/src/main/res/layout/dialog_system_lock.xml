<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_log_bg"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚠ 质子封锁 ⚠"
        android:textColor="#FF5252"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="思维负载已超限。\n您目前被困在虚拟赛博空间。"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="8dp" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请在破碎的数字幻觉中寻找密钥。"
        android:textColor="#00E676"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/inputUnlockKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tech_input_border"
        android:hint="_ _ _ _"
        android:textColor="#FF5252"
        android:textColorHint="#55FF5252"
        android:textSize="24sp"
        android:gravity="center"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnUnlock"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="解密 // 重启"
        android:textColor="#000000"
        android:backgroundTint="#FF5252"
        android:textStyle="bold" />
        
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请寻找失落的 SIGI CYBER CODEX，找到密码线索。"
        android:textColor="#55FFFFFF"
        android:textSize="10sp"
        android:fontFamily="monospace"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp" />

</LinearLayout>
